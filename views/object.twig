{% from "macros.twig" import button %}
{% extends "layout.twig" %}

{% block content %}
<div class="mt-3 mb-3">
    <h1>{{ title }}</h1>
    {{ button("Картинка", "?show=image", is_image) }}
    {{ button("Описание", "?show=info", is_info) }}
</div>

<ul class="list-group">
  <li class="list-group-item" style="display: inline-block; word-wrap: break-word;">
    {% block objectContent %} {{ description }} {% endblock %}
  </li>
</ul>
{% endblock %}