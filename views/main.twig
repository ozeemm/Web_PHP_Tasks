{% extends "layout.twig" %}

{% block content %}
<div class="mt-3">
    <ul class="list-group">
        {% for item in menu %}
            {% if (item.title != "Главная") %}
            <li class="list-group-item">
                <a type="button" class="btn btn-primary" href="{{item.url}}">{{item.title}}</a>
                <a type="button" class="btn btn-link" href="{{item.url}}/image">Картинка</a>
                <a type="button" class="btn btn-link" href="{{item.url}}/info">Описание</a>
            </li>  
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}