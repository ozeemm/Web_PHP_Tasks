{% from "macros.twig" import button %}

{% extends "layout.twig" %}

{% block content %}
<div class="mt-3">
    <ul class="list-group">
        {% for item in menu %}
            {% if (item.title != "Главная") %}
                <li class="list-group-item">
                    {{ button(item.title, item.url, true) }}
                    {{ button("Картинка", "#{item.url}/image") }}
                    {{ button("Описание", "#{item.url}/info") }}
                </li>  
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}