{% extends "layout.twig" %}

{% block content %}
<div class="mt-3">
    <ul class="list-group">
        {% for item in nav_menu %}
        <li class="list-group-item">
            <a type="button" class="btn btn-primary" href="{{item.url}}">{{item.name}}</a>
            <a type="button" class="btn btn-link" href="{{item.url}}/image">Картинка</a>
            <a type="button" class="btn btn-link" href="{{item.url}}/info">Описание</a>
        </li>  
        {% endfor %}
    </ul>
</div>
{% endblock %}