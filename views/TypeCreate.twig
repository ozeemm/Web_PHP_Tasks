{% extends "layout.twig" %}

{% block content %}

<h1>Добавление типа</h1>
<hr>

{% if message %}
<div class="alert alert-info">
    {{ message }}
</div>
{% endif %}

<form action="" method="POST" class="row g-3 justify-content-center"</form>
    <div class="col-auto">
        <label class="form-label">Новый тип</label>
    </div>

    <div class="col-4">
        <input type="text" class="form-control" name="type">    
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>

{% endblock %}